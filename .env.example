# Required - Supabase (exposed to the browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Required for login (server-only; API routes use public.users)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
AUTH_SECRET=your-secret-for-jwt-signing-min-32-chars

# Optional - Email notifications (client-side key if you use EmailJS or similar)
NEXT_PUBLIC_EMAIL_SERVICE_API_KEY=

# Optional - Semaphore SMS (server-only; used by Next.js API routes)
SEMAPHORE_API_KEY=

